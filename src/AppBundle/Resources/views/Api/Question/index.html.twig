{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="card">
            <h1>Toutes les questions</h1>
            <table class="records_list table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Vrai</th>
                    <th>Faux1</th>
                    <th>Faux2</th>
                    <th>Faux3</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_question_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.vrai }}</td>
                        <td>{{ entity.faux1 }}</td>
                        <td>{{ entity.faux2 }}</td>
                        <td>{{ entity.faux3 }}</td>
                        <td>{{ entity.active }}</td>
                        <td>
                            <a href="{{ path('admin_question_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>

                            <a href="{{ path('admin_question_edit', { 'id': entity.id }) }}"  class="btn btn-primary">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin_question_new') }}" class="btn btn-default">
                Create a new entry
            </a>
        </div>
    </div>
{% endblock %}
