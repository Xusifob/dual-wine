{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="card">
            <h1>{{ entity.nom }}</h1>

            <table class="record_properties table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Vrai</th>
                    <td>{{ entity.vrai }}</td>
                </tr>
                <tr>
                    <th>Faux1</th>
                    <td>{{ entity.faux1 }}</td>
                </tr>
                <tr>
                    <th>Faux2</th>
                    <td>{{ entity.faux2 }}</td>
                </tr>
                <tr>
                    <th>Faux3</th>
                    <td>{{ entity.faux3 }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ entity.active }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('admin_question') }} " class="btn btn-default">
                Back to the list
            </a>
            <a href="{{ path('admin_question_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                Edit
            </a>
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
